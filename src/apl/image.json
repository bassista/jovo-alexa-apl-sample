{
  "type": "APL",
  "version": "1.0",
  "theme": "dark",
  "import": [
    {
      "name": "alexa-layouts",
      "version": "1.0.0"
    }
  ],
  "resources": [],
  "styles": {
    "hitButton": {
      "values": [
        {
          "when": "${state.pressed}",
          "opacity": 0.5
        },
        {
          "when": "${state.focused}",
          "opacity": 1
        },
        {
          "when": "${state.disabled}",
          "opacity": 0
        }
      ]
    }
  },
  "layouts": {
    "homeTemplate": {
      "parameters": [
        "title",
        "backgroundImage",
        "listItems",
        "footerHint"
      ],
      "items": [
        {
          "type": "Container",
          "height": "100vh",
          "width": "100vw",
          "items": [
            {
              "type": "Image",
              "position": "absolute",
              "source": "${backgroundImage.large}",
              "scale": "best-fill",
              "width": "100vw",
              "height": "100vh",
              "overlayColor": "rgba(0, 0, 0, 0.2)",
              "filters": [
                {
                  "type": "Blur",
                  "radius": "30dp"
                }
              ]
            },
            {
              "type": "AlexaHeader",
              "headerTitle": "${title}",
              "headerBackgroundColor": "grey",
              "headerBackButton": true,
              "headerNavigationAction": "menu",
              "width": "100vw"
            },
            {
              "type": "Container",
              "direction": "row",
              "items": [
                {
                  "type": "Container",
                  "width": "50vw",
                  "height": "100vh",
                  "alignItems": "start",
                  "items": [
                    {
                      "type": "Sequence",
                      "width": "100vw",
                      "height": "100vh",
                      "scrollDirection": "vertical",
                      "item": [
                        {
                          "type": "Text",
                          "width": "100vw",
                          "fontSize": "30",
                          "textAlign": "left",
                          "text": "Image default option"
                        },
                        {
                          "type": "Image",
                          "width": "30vw",
                          "height": "30vh",
                          "source": "https://cdn.pixabay.com/photo/2016/12/23/12/40/night-1927265_960_720.jpg"
                        },
                        {
                          "type": "Text",
                          "width": "100vw",
                          "fontSize": "30",
                          "textAlign": "left",
                          "text": "Image default scale none"
                        },
                        {
                          "type": "Image",
                          "width": "30vw",
                          "height": "30vh",
                          "source": "https://cdn.pixabay.com/photo/2016/12/23/12/40/night-1927265_960_720.jpg",
                          "scale": "none"
                        },
                        {
                          "type": "Text",
                          "width": "100vw",
                          "fontSize": "30",
                          "textAlign": "left",
                          "text": "Image default scale fill"
                        },
                        {
                          "type": "Image",
                          "width": "30vw",
                          "height": "30vh",
                          "source": "https://cdn.pixabay.com/photo/2016/12/23/12/40/night-1927265_960_720.jpg",
                          "scale": "fill"
                        },
                        {
                          "type": "Text",
                          "width": "100vw",
                          "fontSize": "30",
                          "textAlign": "left",
                          "text": "Image default scale best-fill"
                        },
                        {
                          "type": "Image",
                          "width": "30vw",
                          "height": "30vh",
                          "source": "https://cdn.pixabay.com/photo/2016/12/23/12/40/night-1927265_960_720.jpg",
                          "scale": "best-fill"
                        },
                        {
                          "type": "Text",
                          "width": "100vw",
                          "fontSize": "30",
                          "textAlign": "left",
                          "text": "Image default scale best-fit"
                        },
                        {
                          "type": "Image",
                          "width": "30vw",
                          "height": "30vh",
                          "source": "https://cdn.pixabay.com/photo/2016/12/23/12/40/night-1927265_960_720.jpg",
                          "scale": "best-fit"
                        },
                        {
                          "type": "Text",
                          "width": "100vw",
                          "fontSize": "30",
                          "textAlign": "left",
                          "text": "Image default scale best-fit-down"
                        },
                        {
                          "type": "Image",
                          "width": "30vw",
                          "height": "30vh",
                          "source": "https://cdn.pixabay.com/photo/2016/12/23/12/40/night-1927265_960_720.jpg",
                          "scale": "best-fit-down"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "Container",
                  "width": "50vw",
                  "height": "100vh",
                  "alignItems": "start",
                  "items": [
                    {
                      "type": "Sequence",
                      "width": "100vw",
                      "height": "100vh",
                      "scrollDirection": "vertical",
                      "item": [
                        {
                          "type": "Text",
                          "width": "100vw",
                          "fontSize": "30",
                          "textAlign": "left",
                          "text": "Image default option pixel size"
                        },
                        {
                          "type": "Image",
                          "width": "300",
                          "height": "300",
                          "source": "https://cdn.pixabay.com/photo/2016/12/23/12/40/night-1927265_960_720.jpg"
                        },
                        {
                          "type": "Text",
                          "width": "100vw",
                          "fontSize": "30",
                          "textAlign": "left",
                          "text": "Image default scale none pixel size"
                        },
                        {
                          "type": "Image",
                          "width": "300",
                          "height": "300",
                          "source": "https://cdn.pixabay.com/photo/2016/12/23/12/40/night-1927265_960_720.jpg",
                          "scale": "none"
                        },
                        {
                          "type": "Text",
                          "width": "100vw",
                          "fontSize": "30",
                          "textAlign": "left",
                          "text": "Image default scale fill  pixel size"
                        },
                        {
                          "type": "Image",
                          "width": "300",
                          "height": "300",
                          "source": "https://cdn.pixabay.com/photo/2016/12/23/12/40/night-1927265_960_720.jpg",
                          "scale": "fill"
                        },
                        {
                          "type": "Text",
                          "width": "100vw",
                          "fontSize": "30",
                          "textAlign": "left",
                          "text": "Image default scale best-fill pixel size"
                        },
                        {
                          "type": "Image",
                          "width": "30vw",
                          "height": "30vh",
                          "source": "https://cdn.pixabay.com/photo/2016/12/23/12/40/night-1927265_960_720.jpg",
                          "scale": "best-fill"
                        },
                        {
                          "type": "Text",
                          "width": "100vw",
                          "fontSize": "30",
                          "textAlign": "left",
                          "text": "Image default scale best-fit pixel size"
                        },
                        {
                          "type": "Image",
                          "width": "300",
                          "height": "300",
                          "source": "https://cdn.pixabay.com/photo/2016/12/23/12/40/night-1927265_960_720.jpg",
                          "scale": "best-fit"
                        },
                        {
                          "type": "Text",
                          "width": "100vw",
                          "fontSize": "30",
                          "textAlign": "left",
                          "text": "Image default scale best-fit-down pixel size"
                        },
                        {
                          "type": "Image",
                          "width": "300",
                          "height": "300",
                          "source": "https://cdn.pixabay.com/photo/2016/12/23/12/40/night-1927265_960_720.jpg",
                          "scale": "best-fit-down"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  },
  "mainTemplate": {
    "parameters": [
      "payload"
    ],
    "item": [
      {
        "type": "homeTemplate",
        "title": "${payload.data.properties.title}",
        "backgroundImage": "${payload.data.properties.backgroundImage}",
        "listItems": "${payload.data.properties.listItems}",
        "footerHint": "${payload.data.properties.footerHint}"
      }
    ]
  }
}